<h1>My Lists</h1>
	<div class="container">
	    <table class="table">
		    <thead>
			    <th>Title</th>
			    <th>Author</th>
			    <th>Created at</th>
		    </thead>
		    <tbody>
		    	<% @lists.each do |list| %>
					<% if list.user_id == current_user.id %>
			    		<tr>
				    		<td><%= list.title %></td>
				    		<td><%= @users.find(list.user_id).name %></td>
				    		<td><%= list.created_at %></td>
				    		<td><%= link_to "View", show_list_path(list), class: "btn btn-primary" %></td>
				    		<td><%= link_to "Edit", edit_list_path(list), class: "btn btn-primary" %></td>
			    		</tr>
			    	<% end %>
				<% end %>
	        </tbody>
	    </table>
	</div>
