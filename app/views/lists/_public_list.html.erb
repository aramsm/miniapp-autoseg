<h1>Public Lists</h1>
	<div class="container">
	    <table class="table">
		    <thead>
			    <th>Title</th>
			    <th>Author</th>
			    <th>Created at</th>
		    </thead>
		    <tbody>
		    	<% @lists.each do |list| %>
					<% if list.public %>
			    		<tr>
				    		<td><%= list.title %></td>
				    		<td><%= @users.find(list.user_id).email %></td>
				    		<td><%= list.created_at %></td>
			    		</tr>
			    	<% end %>
				<% end %>
	        </tbody>
	    </table>
	</div>